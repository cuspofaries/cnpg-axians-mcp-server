{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "security:openssf-scorecard"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "remediateIndirect": true
  },
  "osvVulnerabilityAlerts": true,
  "npm": {
    "transitiveRemediation": true
  },
  "remediations": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "vulnerabilityAlerts": {
        "enabled": true
      }
    },
    {
      "description": "Pin vulnerable transitive dependencies",
      "matchCurrentVersion": "!/^0\\./",
      "vulnerabilityAlerts": {
        "enabled": true,
        "remediateIndirect": true
      }
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 5
}
